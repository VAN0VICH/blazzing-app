{
	"name": "@blazzing-app/db",
	"version": "0.1.15",

	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.mjs",
	"exports": {
		".": {
			"import": "./src/index.ts"
		}
	},

	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts --out-dir dist",

		"clean": "rm -rf .turbo node_modules",
		"lint": "biome lint src",
		"beautify": "biome format ./src --write",
		"format": "biome format ./src",
		"typecheck": "tsc --noEmit",
		"migrate": "tsx src/migrate.ts",
		"push": "drizzle-kit push",
		"studio": "drizzle-kit studio",
		"generate": "drizzle-kit generate:pg",
		"publish-packages": "pnpm changeset version && changeset publish --access public",
		"changeset-init": "pnpm changeset init"
	},
	"dependencies": {
		"@effect/schema": "^0.70.4",
		"@neondatabase/serverless": "^0.10.3",
		"drizzle-orm": "^0.36.4",
		"drizzle-zod": "^0.5.1",
		"pg": "^8.11.5",
		"replicache": "15.0.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@blazzing-app/tsconfig": "workspace:^0.1.0",
		"@changesets/cli": "^2.27.9",
		"dotenv-cli": "^7.4.2",
		"drizzle-kit": "^0.28.1",
		"tsup": "^8.3.5",
		"tsx": "^4.7.2",
		"typescript": "^5.5.4"
	}
}
